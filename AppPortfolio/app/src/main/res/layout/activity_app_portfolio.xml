<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AppPortfolio">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/bSpotifyStreamer"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="b_onClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Super Duo: Scores"
        android:id="@+id/bSuperDuoScores"
        android:layout_below="@+id/bSpotifyStreamer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="b_onClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Super Duo: Library"
        android:id="@+id/bSuperDuoLibrary"
        android:layout_below="@+id/bSuperDuoScores"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="b_onClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/bBuildItBigger"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="b_onClick"
        android:layout_below="@+id/bSuperDuoLibrary" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/bXyzReader"
        android:layout_below="@+id/bBuildItBigger"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="b_onClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/bCapstone"
        android:layout_below="@+id/bXyzReader"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="b_onClick" />
</RelativeLayout>
